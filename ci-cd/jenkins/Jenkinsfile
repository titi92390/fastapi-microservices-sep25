pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:latest
    command:
    - cat
    tty: true
    volumeMounts:
    - name: docker-config
      mountPath: /kaniko/.docker
  volumes:
  - name: docker-config
    secret:
      secretName: dockerhub-credentials
"""
    }
  }

  environment {
    REGISTRY = "titi92390"
    TAG = "dev"
  }

  stages {
    stage('Build & Push Images') {
      steps {
        container('kaniko') {
          sh '''
            /kaniko/executor \
              --context ./Microservices/auth \
              --dockerfile Dockerfile.dev \
              --destination=${REGISTRY}/auth:${TAG}

            /kaniko/executor \
              --context ./Microservices/users \
              --dockerfile Dockerfile.dev \
              --destination=${REGISTRY}/users:${TAG}

            /kaniko/executor \
              --context ./Microservices/items \
              --dockerfile Dockerfile.dev \
              --destination=${REGISTRY}/items:${TAG}

            /kaniko/executor \
              --context ./frontend \
              --dockerfile Dockerfile.dev \
              --destination=${REGISTRY}/frontend:${TAG}
          '''
        }
      }
    }
  }

  post {
    success {
      echo "CI pipeline completed successfully"
    }
    failure {
      echo "CI pipeline failed"
    }
  }
}
